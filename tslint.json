{  
	"extends": ["tslint:recommended"],
	"rules": {    
		"member-access": true,
		"indent": false,
		"one-line": false,
		"variable-name": {
			"options": [
				"ban-keywords",
				"allow-leading-underscore",
				"allow-pascal-case"
			]
		},
		"curly": [ false, "as-needed"],
		"no-console": [ false, "log", "error"],
		"max-line-length": 120,
		"quotemark": [ false, "single", "jsx-double"]
	},
	"linterOptions": {
		"exclude": [ "node_modules/**/*.ts" ]
	}
}
